  <script>
    /* === THEME TOGGLE === */
    const themeToggle = document.getElementById('themeToggle');
    const themeIcon = document.getElementById('themeIcon');
    const themeText = document.getElementById('themeText');

    themeToggle.addEventListener('click', () => {
      document.body.classList.toggle('light-theme');
      const isLight = document.body.classList.contains('light-theme');
      themeIcon.textContent = isLight ? '‚òÄÔ∏è' : 'üåô';
      themeText.textContent = isLight ? 'Mode Terang' : 'Mode Gelap';
    });

    /* === CAROUSEL === */
    const track = document.getElementById("carouselTrack");
    const nextBtn = document.getElementById("nextBtn");
    const prevBtn = document.getElementById("prevBtn");
    let cards = Array.from(track.children);
    let current = 0;
    let autoSlide;
    let cardWidth = 0;

    function updateCarousel() {
      cardWidth = cards[0].offsetWidth + 32;
      const offset = -current * cardWidth + (track.parentElement.offsetWidth - cardWidth) / 2;
      track.style.transform = `translateX(${offset}px)`;
      cards.forEach((card, i) => {
        card.classList.toggle("active", i === current);
      });
    }

    function nextSlide() {
      current = (current + 1) % cards.length;
      updateCarousel();
    }

    function prevSlide() {
      current = (current - 1 + cards.length) % cards.length;
      updateCarousel();
    }

    nextBtn.addEventListener("click", () => { nextSlide(); resetAutoSlide(); });
    prevBtn.addEventListener("click", () => { prevSlide(); resetAutoSlide(); });

    function resetAutoSlide() {
      clearInterval(autoSlide);
      autoSlide = setInterval(nextSlide, 4000);
    }

    autoSlide = setInterval(nextSlide, 4000);
    window.addEventListener("resize", updateCarousel);
    updateCarousel();

    /* === MODAL === */
    const modal = document.getElementById('modal');
    const closeModal = document.getElementById('closeModal');

    cards.forEach(card => {
      card.addEventListener('click', () => {
        const name = card.dataset.name;
        const role = card.dataset.role;
        const detail = card.dataset.detail;
        const skills = card.dataset.skill.split(', ');
        const photo = card.dataset.photo;

        document.getElementById('modalName').textContent = name;
        document.getElementById('modalRole').textContent = role;
        document.getElementById('modalDetail').textContent = detail;
        document.getElementById('modalPhoto').src = photo;

        const skillContainer = document.getElementById('modalSkills');
        skillContainer.innerHTML = '';
        skills.forEach(skill => {
          const tag = document.createElement('span');
          tag.textContent = skill;
          tag.style.padding = '4px 10px';
          tag.style.background = 'rgba(0,209,255,0.2)';
          tag.style.border = '1px solid rgba(0,209,255,0.4)';
          tag.style.borderRadius = '20px';
          tag.style.fontSize = '0.8rem';
          tag.style.color = '#00d1ff';
          skillContainer.appendChild(tag);
        });

        modal.classList.add("show");
      });
    });

    closeModal.addEventListener('click', () => modal.classList.remove("show"));
    modal.addEventListener('click', (e) => { if (e.target === modal) modal.classList.remove("show"); });
  </script>
